    \n    ], \
    \n    [ \
    \n      "dcm2niix", \
    \n      { \
    \n        "method": "source", \
    \n        "version": "latest" \
    \n      } \
    \n    ], \
    \n    [ \
    \n      "miniconda", \
    \n      { \
    \n        "create_env": "neuro", \
    \n        "conda_install": [ \
    \n          "python=3.6", \
    \n          "traits" \
    \n        ], \
    \n        "pip_install": [ \
    \n          "nipype" \
    \n        ] \
    \n      } \
    \n    ] \
    \n  ] \
    \n}' > /neurodocker/neurodocker_specs.json

#upload ben's skynet rsa and pub
COPY known_hosts id_rsa id_rsa.pub /root/.ssh/
RUN chmod 600 /root/.ssh/id_rsa && chmod 644 /root/.ssh/id_rsa.pub /root/.ssh/known_hosts
# Create the log file to be able to run tail
RUN touch /var/log/cron.log
#RUN chmod +x /opt/dcm2niix-latest/bin/dcm2niix
